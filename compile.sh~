#!/bin/bash
gfortran -Wall -Wextra -Wtabs -fPIC -g -fcheck=all -fbacktrace -ffree-line-length-0 cylinder_system.f08 dranxor2.f95 -o cylinder_system.exe #use this one for development, you can add -Wall for all kind of warnings, but it can get messy becuse every single tab character will create a warning and you won't be able to find actual warnings or errors
#gfortran -Wextra -fPIC -Werror -O3 -march=native -ffast-math -funroll-loops -ffree-line-length-0 cylinder_system.f08 dranxor2.f95 -o cylinder_system_final.exe #use this one for release, again, you can add -Wall for all kind of warnings, but it can get messy becuse every single tab character will create a warning and you won't be able to find actual warnings or errors
